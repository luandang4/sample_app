<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.size.digit_50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
    </span>
  <span class="timestamp">
    <%= t(".post_at", timestamp: time_ago_in_words(micropost.created_at)) %>
    <% if current_user? micropost.user %>
    <%= link_to t(".delete"), micropost, method: :delete,
    data: {confirm: t("users.user.alert_confirm")} %>
    <% end %>
  </span>
</li>
